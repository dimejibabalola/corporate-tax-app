#!/bin/bash
# Corporate Tax I Study App Launcher
# Uses dedicated port 5180 to avoid conflicts with other dev servers

PROJECT_DIR="/Users/oladimejibabalola/dyad-apps/lunar-gecko-beam"
PORT=5180
cd "$PROJECT_DIR"

# Check if already running on our dedicated port
if lsof -i :$PORT > /dev/null 2>&1; then
    open "http://localhost:$PORT"
    exit 0
fi

# Start dev server and open browser
osascript -e 'tell application "Terminal"
    activate
    do script "cd /Users/oladimejibabalola/dyad-apps/lunar-gecko-beam && npm run dev"
end tell'

# Wait for server to start
sleep 6
open "http://localhost:$PORT"
